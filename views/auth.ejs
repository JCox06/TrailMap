<% layout("layouts/default") %>




  <div class="row">
    <div class="col-12 offset-4 mt-5">
      <div class="card" style="width: 30%">
        <div class="card-header">Authentication card
        </div>


        <div class="card-body">



          <form id="logon" class="nv" novalidate method="POST" action="/auth/login">
            <div>
              <p>Login or <a class="link-success" id="switchSignup">sign up</a></p>
            </div>

            <div class="form-group">
              <label for="email" class="form-label">Email Address</label>
              <input type="email" id="email" name="auth[email]" class="form-control" required>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>

            <div class="form-group">
              <label for="password" class="form-label">Password</label>
              <input type="password" id="password" name="auth[password]" class="form-control" required>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>

            <button class="btn btn-primary mt-3 col-12">Logon</button>
          </form>


          <form id="signup" class="nv" style="display: none" method="POST" action="/auth/signup" novalidate>
            <div>
              <p>Sign up or <a class="link-success" id="switchLogon">log onto your account</a></p>
            </div>

            <div class="form-group">
              <label for="username" class="form-label">Username</label>
              <div class="input-group">
                <span class="input-group-text" id="basic-addon1">@</span>
                <input type="text" id="username" class="form-control" name="auth[username]" required>
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>
            </div>
            <div class="form-group">
              <label for="email" class="form-label">Email Address</label>
              <input type="email" id="email" name="auth[email]" class="form-control" required>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>

            <div class="form-group">
              <label for="password" class="form-label">Password</label>
              <input type="password" id="password" name="auth[password]" class="form-control" required>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>

            <button class="btn btn-primary mt-3 col-12">Sign up</button>
          </form>
        </div>
      </div>

    </div>

  </div>