<% layout("layouts/default") %>

  <h1 class="mb-5">All Trails</h1>


  <% for(let t of trails) { %>
    <div class="card d-inline-flex TRAIL-card mb-3">
      <div class="d-flex flex-column">
        <div class="card-body">
          <h5 class="card-title">
            <%= t.title %>
          </h5>
        </div>
        <div class="card-body">
          <p class="card-text">
            <% if(t.description.length> 235) { %>
              <%= t.description.substring(0, 235) %>.....
                <% } else {%>
                  <%= t.description %>
                    <% } %>
          </p>
          <a class="btn btn-primary mb-3" href="/trails/<%=t._id%>">
            View Trail
          </a>
        </div>
        <div class="card-footer text-muted">
          <%= t.difficulty%>
        </div>
      </div>

    </div>
    <%} %>